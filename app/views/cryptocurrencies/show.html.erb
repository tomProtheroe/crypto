<% for x in @show_crypto %>
  <% if @cryptocurrency.symbol.upcase == x["symbol"] %>
    <% crypto_name =x["name"] %> 
    <% crypto_price = x["quote"]["USD"]["price"] %>
    <% crypto_rank = x["cmc_rank"] %>
  <% end %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= crypto_name %></h3>
  </div>
  <div class="panel-body">

  <h1><%= @cryptocurrency.symbol.upcase %></h1>

  <p>
    <strong>Crypto Price: </strong> <%= crypto_price %>
  </p>
   
  <p>
    <strong>Rank: </strong> <%= crypto_rank %>
  </p> 

  <p>
    <strong>Cost per:</strong>
    <%= @cryptocurrency.cost_per %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= @cryptocurrency.amount %>
  </p>
</div>
  <div class="panel-footer">
    <%= link_to 'Edit', edit_cryptocurrency_path(@cryptocurrency) %> |
    <%= link_to 'Delete Currency', cryptocurrency_path(@cryptocurrency), method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', cryptocurrencies_path %> 
  </div>
</div>


